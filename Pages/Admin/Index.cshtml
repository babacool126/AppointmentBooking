
@page
@model AppointmentBooking.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Administrateur";
}

<h1>Administrateur</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Appointments)
        {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@(item.Date + item.Time).ToShortTimeString()</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Remarks</td>
                </tr>
        }
    </tbody>
</table>



