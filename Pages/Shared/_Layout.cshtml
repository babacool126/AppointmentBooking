@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pour un chauffage de qualité !</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppointmentBooking.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <div class="p-4 bg-dark text-white text-center">
            <h1>Chauffage Delmotte </h1>
            <p>Vous n'aurez plus jamais froid!</p>
        </div>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Pour un chauffage de qualité !</a>
                <ul class="navbar-nav ms-auto me-5 fs-5">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Clients/Index">Clients</a>
                        </li>
                    }
                    @if (SignInManager.IsSignedIn(User) && (await AuthorizationService.AuthorizeAsync(User, "AdministratorOnly")).Succeeded)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Index">Admin Appointments</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Appointments/Create">Appointments</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link phone-number" style="color: white;">0681380268</span>
                    </li>
                </ul>
               
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid flex-grow-1">
        <div class="row min-vh-100">
            <div class="col">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="mt-auto p-4 bg-dark text-white text-center">
        <div class="mt-3">
            <a href="#">Mentions légales</a> |
            <a href="#">Confidentialité</a> |
            <a href="#">Conditions Générales d'Utilisation</a> |
            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
                    <button type="submit" class="btn btn-link text-white">Logout</button>
                </form>
            }
            else
            {
                <a asp-page="/Account/Login">Login</a>
            }
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


